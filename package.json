{
  "name": "smtr-rio-modern",
  "version": "2.0.0",
  "description": "API REST moderna para consulta de dados de GPS do SPPO do Rio de Janeiro",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "start:win": "set NODE_ENV=production && node src/server.js",
    "dev:win": "set NODE_ENV=development && nodemon src/server.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd src/public && npm run build",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "api",
    "rest",
    "sppo",
    "rio",
    "gps",
    "onibus",
    "modern",
    "performance"
  ],
  "author": "SMTR Rio",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "axios": "^1.6.2",
    "node-cache": "^5.1.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}